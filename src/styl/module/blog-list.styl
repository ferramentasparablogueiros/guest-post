.blog-list
    max-width: 960px
    margin: 0 auto

    + element(title)
        color: #666
        margin: get-spacing(3) 0 get-spacing(1) 0
        padding: 0 get-spacing(2) 0 (get-spacing(2) + get-spacing(2))
        font-weight: 400
        font-size: 16px
        @media (min-width: screen-tablet-min)
            font-size: 22px

    + element(subtitle)
        color: #666
        margin: 0 0 get-spacing(1) 0
        padding: 0 get-spacing(2) 0 (get-spacing(2) + get-spacing(2))
        font-size: 12px
        @media (min-width: screen-tablet-min)
            font-size: 15px

    + element(flex-grid)
        display: flex
        flex-wrap: wrap
        max-width: 960px
        margin: 0 auto

        + element(item)
            margin-left: get-spacing(2)
            margin-top: get-spacing(2)
            flex-direction: column
            display: flex
            flex: "1 0 calc(100% - %s )" %get-spacing(2)
            @media (min-width: screen-tablet-min)
                flex: "1 0 calc(33% - %s )" %get-spacing(2)

        + element(header)
            text-align: center
            color: #999
            line-height: 18px
            margin: get-spacing(2) 0 0 0
            flex-basis: 100%

            + element(title)
                font-size: 14px
                padding-bottom: get-spacing(1)
                border-bottom: 1px solid #f5f5f5
                display: inline-block
                position: relative
                top: 1px
                padding-left: get-spacing(1)
                padding-right: get-spacing(1)
                margin-bottom: 0

            + element(subtitle)
                border-top: 1px solid #eee
                font-size: 12px
                margin-top: 0

    + element(button)
        margin: get-spacing(2) auto
        display: block
