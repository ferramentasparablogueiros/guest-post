.jumbotron
    text-align: center
    font-weight: 400
    color: #fff
    background-image: url('/images/crowd-people-pattern.jpg')
    position: relative
    z-index: get-z-index(jumbotron)
    padding-top: 54px

    &:before
        content: ''
        width: 100%
        height: 100%
        display: block
        background-color: rgba(28, 131, 176, .75)
        position: absolute
        z-index: get-z-index(jumbotron-overlay)
        top: 0

    &__content
        max-width: 960px
        margin: 0 auto
        padding: get-spacing(4) get-spacing(2)
        z-index: get-z-index(jumbotron-content)
        position: relative

    &__title
        text-shadow: 0 1px 2px rgba(0, 0, 0, .5)
        margin: 0
        padding: get-spacing(2) get-spacing(1)
        font-size: 25px
        font-weight: 800
        @media (min-width: screen-tablet-min)
            font-size: 50px
            padding: get-spacing(3) get-spacing(2)

    &__subtitle
        font-size: 13px
        font-weight: 100
        margin: 0
        @media (min-width: screen-tablet-min)
            font-size: 16px

    &__main-link
        margin-top: get-spacing(1)
        color: #fff
        font-size: 13px
        display: block
        @media (min-width: screen-tablet-min)
            font-size: 16px
