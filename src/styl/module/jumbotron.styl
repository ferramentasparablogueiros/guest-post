.jumbotron
    max-width: 960px
    margin: 0 auto
    text-align: center
    font-weight: 400
    color: #34495e
    display: flex
    flex-direction: column
    padding: get-spacing(2)

    &__title
        text-shadow: 0 1px 2px rgba(255, 255, 255, .5)
        padding: 0
        margin: get-spacing(2) get-spacing(1)
        font-size: 25px
        font-weight: 400
        @media (min-width: screen-tablet-min)
            font-weight: 800
            font-size: 50px
            margin: get-spacing(3) get-spacing(2)

    &__subtitle
        font-size: 13px
        font-weight: 100
        margin: 0

    &__search-input
        line-height: 40px
        border: 1px solid hsl(0, 0%, 86%)
        width: 480px
        margin: get-spacing(3) auto
        border-radius: 2px
        max-width: 100%
        padding: get-spacing(1)
        @media (min-width: screen-tablet-min)
            padding: get-spacing(1) get-spacing(2)
