.form-block
    input,
    textarea
        width: 100%
        margin: 0 0 get-spacing(1) 0
        max-height: 60px
        padding: get-spacing(1)
        resize: none
        border: 1px solid #e9e9e9
        border-radius: 8px
        outline: 0
        display: block

        &:active,
        &:focus
            border-color: red
