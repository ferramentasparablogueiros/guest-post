.page-footer
    background-color: #43484c
    color: #86939c
    font-size: 13px

    + element(content)
        color: #666
        margin: 0 auto
        max-width: 960px
        min-height: 40px
        padding: get-spacing(1)
        margin-top: get-spacing(1)
        m-clearfix()

    + element(title)
        color: #fff
        font-size: 18px

    + element(text)
        line-height: 1.5
